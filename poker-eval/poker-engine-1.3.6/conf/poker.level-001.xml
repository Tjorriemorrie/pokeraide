<?xml version="1.0" encoding="ISO-8859-1"?>
<bet xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="bet.xsd" name="no limit" table-stakes="yes" unit="500" buy-in="200000" poker_engine_version="1.3.6">

    <description>No limit tournament</description>

    <blind change="levels" levels="poker.levels-blinds.xml" frequency="10" unit="minutes"/>

    <all_in method="side"/> 

    <variants ids="omaha omaha8 holdem">
      <round name="pre-flop" min="big" cap="-1"/>
      <round name="flop" min="big" cap="-1"/>
      <round name="turn" min="big" cap="-1"/>
      <round name="river" min="big" cap="-1"/>
    </variants>

    <variants ids="7stud 7stud8">
      <round name="pre-flop" min="big" cap="-1"/>
      <round name="third" min="big" cap="-1"/>
      <round name="fourth" min="big" cap="-1"/>
      <round name="fifth" min="big" cap="-1"/>
      <round name="sixth" min="big" cap="-1"/>
      <round name="seventh" min="big" cap="-1"/>
    </variants>

</bet>
